@model TabloidMVC.Models.ViewModels.PostTagViewModel

@{
    ViewData["Title"] = "Add";
}

<h1>Add a Tag</h1>

@*<table class="table">*@
<form asp-action="Add">
    <div class="form-group">
        <label asp-for="PostTag.TagId" class="control-label"></label>
        <select asp-for="PostTag.TagId" class="form-control">
            @foreach (var tag in @Model.TagOptions)
            {
            <option value="@tag.Id">@tag.Name</option>
            }
        </select>
        <span asp-validation-for="PostTag.TagId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="save" class="btn btn-primary btn-block" />
    </div>
</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@*</table>*@
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
